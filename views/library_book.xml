<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<!--Add the action that opens the views in the library_book.xml file -->
	<record id='library_book_action' model='ir.actions.act_window'>
		<field name='name'>Library Books</field>
		<field name='res_model'>library.book</field>
		<field name='view_model'>tree,form</field>
	</record>
	<!--Add the menu items to the library_book.xml file, making it visible to users -->
	<memuitem name='My Library' id='library_base_menu' />
	<menuitem name='Books' id='library_book_menu' parent='library_base_menu' action='library_book_action'/>
	<!--Add a custom form view to the library_book.xml file -->
	<record id='library_book_view_form' model='ir.ui.view'>
		<field name='name'>Library Book Form</field>
		<field name='model'>library.book</field>
		<field name='arch' type='xml'>
			<form>
				<group>
					<group>
						<field name="name"/>
						<field name="author_ids" widget="many2many_tags"/>
					</group>
					<group>
						<field name="date_release"/>
					</group>
				</group>
			</form>	
		</field>
	</record>
	<!-- Add a  custom tree (list) view to the library_book.xml file -->
	<record id='library_book_view_tree' model='ir.ui.view'>
		<field name='name'>Library Book List</field>
		<field name='model'>library.book</field>
		<field name='arch' type='xml'>
			<tree>
				<field name="name" />
				<field name="date_release" />
			</tree>	
		</field>
	</record>
	<!-- Add custom Search options to the library_book.xml file -->
	<record id='library_book_view_search' model='ir.ui.view'>
		<field name='name'>Library Book Search</field>
		<field name='model'>library.book</field>
		<field name='arch' type='xml'>
			<search>
				<field name="name" />
				<field name="author_ids" />
				<field string="Without Authors" name="without_author" domain="[('author_ids','=',False)]"/>
			</search>	
		</field>
	</record>
</odoo>